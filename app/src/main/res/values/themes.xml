<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Milin" parent="android:Theme.Material.NoActionBar" />

    <style name="Theme.Milin.Fullscreen" parent="Theme.Milin">
        <item name="android:actionBarStyle">@style/Widget.Theme.Milin.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowSplashScreenBackground">@color/light_blue_600</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.Milin.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>